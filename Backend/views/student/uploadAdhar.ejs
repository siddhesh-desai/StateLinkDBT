  <div class="card-body p-4 p-sm-5">
    <form class="row g-3" action="/student/upload/aadhaar" method="post" enctype="multipart/form-data">
      <legend>
        <h2><b>Aadhaar Details</b></h2>
      </legend>
      <hr />

      <br />
      <br />
      <br />
      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">
          <h6>Email</h6>
        </label>
        <div class="col-sm-3">
          <input type="text" class="form-control" id="colFormLabel" value="<%= email %>" disabled />
        </div>
      </div>

      <br />

      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">
          <h6>Upload Addhaar</h6>
        </label>
        <div class="col-sm-3">
          <input class="form-control" type="file" id="formFile" style="width: 260px" name="addhar" />
        </div>
        <% if(addhar) {%>
          <div class="col-auto">
            <a type="submit" class="btn btn-primary mb-3"
              style="background-color: green; border-color: green" data-toggle="modal" data-target="#exampleModal">
              View
            </a>
          </div>
        <% } %>
      </div>

      <br />
      <br />
      <br />

      <div class="d-flex " style="width: auto; align-items: center">
        <button type="submit" class="btn btn-primary" id="btnCol">
          Save 
        </button>
        <a  href="/student/upload/personal" class="btn btn-primary ms-3" id="btnCol">
          Next
        </a>
      </div>
    </form>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 90%;">
      <div class="modal-content" >
        <!-- Modal heading -->
        <div class="modal-header">
          <h5 class="modal-title text-center" id="exampleModalLabel">
            Aadhaar Card
          </h5>
          <button type="button" class="close p-3 border rounded" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" >
              ‚ùå
            </span>
          </button>
        </div>
        <!-- Modal body with image -->
        <div class="modal-body" >
          <img src="<%= addhar %>" width="100%"/>
        </div>
      </div>
    </div>
